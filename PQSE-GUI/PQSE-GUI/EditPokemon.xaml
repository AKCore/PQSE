<Window x:Class="PQSE_GUI.EditPokemon"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PQSE_GUI"
        mc:Ignorable="d"
        Title="EditPokemon" Height="450" Width="800">
    <StackPanel>
        <Button Content="Save Pokemon" Click="Button_Click" />
        <TabControl>
            <TabItem>
                <TabItem.Header>
                    <TextBlock Text="General"/>
                </TabItem.Header>
                <StackPanel Orientation="Vertical">
                    <Label Content="Pokemon Species:" />
                    <ComboBox>
                        <ScrollViewer>
                            <StackPanel x:Name="innerPokeData" Orientation="Vertical">
                            </StackPanel>
                        </ScrollViewer>
                        
                    </ComboBox>
                </StackPanel>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <TextBlock Text="PStones"/>
                </TabItem.Header>

            </TabItem>
        </TabControl>
    </StackPanel>
</Window>
